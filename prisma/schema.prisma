// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id           Int          @id @default(autoincrement())
    uid          Int          @unique
    token        String       @map("access_token")
    email        String
    login        String
    fullname     String?
    picture      String?
    createdAt    DateTime     @default(now()) @map("created_at")
    updatedAt    DateTime     @default(now()) @updatedAt @map("updated_at")
    repositories Repository[]

    @@map("users")
}

model Repository {
    id            Int      @id @default(autoincrement())
    repoId        Int      @unique @map("repo_id")
    uuid          String   @unique
    owner         User     @relation(fields: [ownerId], references: [uid])
    ownerId       Int      @map("owner_id")
    name          String
    fullname      String   @map("full_name")
    shareableLink String   @map("shareable_link")
    htmlUrl       String   @map("html_url")
    createdAt     DateTime @default(now()) @map("created_at")
    deletedAt     DateTime @default(now()) @updatedAt @map("deleted_at")

    @@map("repositories")
}
